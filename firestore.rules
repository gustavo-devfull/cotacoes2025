rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para usuários - permitir leitura para usuários autenticados
    match /users/{userId} {
      // Permitir leitura para usuários autenticados
      allow read: if request.auth != null;
      // Permitir escrita apenas para admins ou o próprio usuário
      allow write: if request.auth != null && 
        (request.auth.uid == userId || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
    
    // Regras para cotações - permitir leitura e escrita para usuários autenticados
    match /cotacoes/{cotacaoId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para comentários - permitir leitura e escrita para usuários autenticados
    match /comments/{commentId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para notificações - permitir leitura e escrita para usuários autenticados
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para seleções de produtos - permitir leitura e escrita para usuários autenticados
    match /productSelections/{selectionId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras padrão - negar acesso para documentos não especificados
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
